#! /bin/bash

echo "Removing AppImageLauncher as interpreter for AppImages"

(set -x; update-binfmts --package appimage --remove appimage-type2 /usr/bin/AppImageLauncher)

# unregister MIME associations
# TODO: make sure this works across all supported distributions
(set -x; sed -i '/.*application\/vnd\.appimage.*/d' /usr/share/applications/mimeinfo.cache)
(set -x; sed -i '/.*application\/x-appimage.*/d' /usr/share/applications/mimeinfo.cache)
